<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_metronome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.hissylizard.vibr8.MetronomeActivity"
    tools:showIn="@layout/activity_metronome">

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bmpIncrease"
        android:layout_alignBaseline="@+id/bpm"
        android:layout_alignBottom="@+id/bpm"
        android:layout_alignParentEnd="true"
        android:onClick="bpmIncreaseClick" />

    <TextView
        android:text="120"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bpm"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_alignBaseline="@+id/bpmDecrease"
        android:layout_alignBottom="@+id/bpmDecrease"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status stuff goes here"
        android:id="@+id/status"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/startStop"
        android:checked="false"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/connect"
        android:onClick="connectClick"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/startStop" />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bpmDecrease"
        android:onClick="bpmDecreaseClick"
        android:layout_above="@+id/startStop"
        android:layout_alignParentStart="true" />

</RelativeLayout>
